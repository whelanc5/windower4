<?xml version="1.0" ?>
<settings>
	<!--
	This file controls the settings for the BlinkMeNot plugin.
	Settings in the <global> section apply to all characters
	
	The available settings are:
	<always|target|combat><self|follow|party|ally|others>
	i.e.
	alwaysself
	combatally
	etc.
	-->
	<global>
		<alwaysself>false</alwaysself>
		<alwaysfollow>true</alwaysfollow>
		<alwaysparty>false</alwaysparty>
		<alwaysally>false</alwaysally>
		<alwaysothers>false</alwaysothers>

		<targetself>true</targetself>
		<targetfollow>true</targetfollow>
		<targetparty>true</targetparty>
		<targetally>true</targetally>
		<targetothers>true</targetothers>

		<combatself>true</combatself>
		<combatfollow>true</combatfollow>
		<combatparty>false</combatparty>
		<combatally>false</combatally>
		<combatothers>false</combatothers>
	</global>

	<!--
	You may also override specific settings on a per-character basis here.
	-->
</settings>